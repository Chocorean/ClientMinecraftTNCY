<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="rootPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.131" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.chocorean.MinecraftUpdater.AppController">
   <children>
      <BorderPane fx:id="borderPane" prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <bottom>
            <BorderPane id="footer" maxHeight="150.0" prefHeight="150.0" prefWidth="200.0" stylesheets="@../styles.css" BorderPane.alignment="CENTER">
               <center>
                  <VBox alignment="CENTER" BorderPane.alignment="CENTER">
                     <children>
                        <Label text="Chemin du dossier contenant les mods:" textFill="WHITE" />
                        <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0">
                           <children>
                              <TextField fx:id="modsDirectory" editable="false" minWidth="300.0" />
                              <Button fx:id="changeModsLocation" mnemonicParsing="false" text="Change" />
                           </children>
                        </HBox>
                     </children>
                     <BorderPane.margin>
                        <Insets top="10.0" />
                     </BorderPane.margin>
                  </VBox>
               </center>
               <bottom>
                  <BorderPane fx:id="bottom" BorderPane.alignment="CENTER">
                     <BorderPane.margin>
                        <Insets bottom="20.0" />
                     </BorderPane.margin>
                     <center>
                        <Button fx:id="updateButton" mnemonicParsing="false" styleClass="minecraft-button" stylesheets="@../styles.css" text="Update" textFill="WHITE">
                           <BorderPane.margin>
                              <Insets top="10.0" />
                           </BorderPane.margin></Button>
                     </center>
                     <bottom>
                        <Label fx:id="version" alignment="BOTTOM_RIGHT" contentDisplay="RIGHT" styleClass="version" stylesheets="@../styles.css" text="Label" textAlignment="CENTER" BorderPane.alignment="BOTTOM_RIGHT">
                           <BorderPane.margin>
                              <Insets right="20.0" />
                           </BorderPane.margin>
                        </Label>
                     </bottom>
                  </BorderPane>
               </bottom>
               <BorderPane.margin>
                  <Insets />
               </BorderPane.margin>
            </BorderPane>
         </bottom>
         <center>
            <fx:include fx:id="changelog" source="/fxml/changelog.fxml" />
         </center>
      </BorderPane>
   </children>
</AnchorPane>
